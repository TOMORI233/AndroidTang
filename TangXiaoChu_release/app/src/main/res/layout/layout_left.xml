<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/celan"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.constraint.ConstraintLayout
        android:layout_width="300dp"
        android:layout_height="215dp"
        android:id="@+id/relativeLayout4">

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="300dp"
            android:layout_height="215dp"
            android:background="@color/colorCelanTop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/userimage_menu"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="45dp"
            app:srcCompat="@drawable/appp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <TextView
            android:id="@+id/username_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textColor="#ffffff"
            android:textSize="25dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/userimage_menu"
            app:layout_constraintStart_toStartOf="@+id/userimage_menu"
            app:layout_constraintTop_toBottomOf="@+id/userimage_menu" />

    </android.support.constraint.ConstraintLayout>

    <ListView
        android:id="@+id/menulist"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:background="@color/colorCelanList"/>

</LinearLayout>
